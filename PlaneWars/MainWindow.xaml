<Window x:Class="PlaneWars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlaneWars"
        mc:Ignorable="d"
        Title="Plane Wars" Height="800" MaxHeight="800" MinHeight="800" Width="540" MaxWidth="540" MinWidth="540"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Image Source="Images/background.png" Stretch="Uniform" />
        <Canvas Name="mainScene">
            <Image Name="playerImage" />
            <Image Source="Images/enemy1.png" />
            <Rectangle Canvas.Left="33" Canvas.Top="8" Width="11" Height="39" Stroke="Blue" StrokeThickness="1" />
            <Ellipse Canvas.Left="33" Canvas.Top="40" Width="11" Height="11" Stroke="Red" StrokeThickness="1" />
            <Polygon Stroke="Red" StrokeThickness="1" Points="5,20 34,20 34,48" />
            <Polygon Stroke="Red" StrokeThickness="1" Points="73,20 44,20 44,48" />

            <Image Source="Images/bullet1.png" Canvas.Left="100" Canvas.Top="10" />
            <Rectangle Canvas.Left="100" Canvas.Top="10" Width="3" Height="1" Stroke="Black" StrokeThickness="1" />
        </Canvas>
    </Grid>
</Window>
