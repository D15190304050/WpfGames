<Window x:Class="GobangClient.MainScene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GobangClient"
        mc:Ignorable="d"
        Title="MainScene" Height="450" Width="800"
        Loaded="Window_Loaded"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Name="chessboardBorder" Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="10" Width="{Binding ElementName=chessboardBorder, Path=ActualHeight}" HorizontalAlignment="Left" Background="LightYellow">
            <Canvas Name="chessboardCanvas" />
        </Border>

        
    </Grid>
</Window>
